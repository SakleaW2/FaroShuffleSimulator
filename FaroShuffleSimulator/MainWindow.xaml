<Window x:Class="FaroShuffleSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фаро Тасовка Карт"
        WindowState="Maximized"
        WindowStyle="None">
   
    <Window.Background>
        <ImageBrush ImageSource="Images/wood_texture.jpg"
                    Stretch="UniformToFill" />
    </Window.Background>
    
    <Window.Resources>
        <Style x:Key="GameButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Padding"
                    Value="12,6" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="0,1">
                        <GradientStop Color="#43a047"
                                      Offset="0" />
                        <GradientStop Color="#1b5e20"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush"
                    Value="#0d3b15" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="6"
                                      ShadowDepth="2" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Панель кнопка-->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10">
            <Button Content="Перемешать"
                    Click="Shuffle_Click"
                    Style="{StaticResource GameButtonStyle}" />
            <Button Content="Сортировать"
                    Click="Sort_Click"
                    Style="{StaticResource GameButtonStyle}" />
            <Button Content="Сбросить"
                    Click="Reset_Click"
                    Style="{StaticResource GameButtonStyle}" />
            <Button Content="Показать все"
                    Click="ShowAll_Click"
                    Style="{StaticResource GameButtonStyle}" />
        </StackPanel>

        <ListBox x:Name="CardListBox"
                 Grid.Row="1"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionMode="Single"
                 Padding="10">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="1"
                            CornerRadius="10"
                            Background="#ecf0f1"
                            BorderBrush="#bdc3c7"
                            BorderThickness="1"
                            Padding="5">
                        <StackPanel>
                            <Image Source="{Binding ImagePath}"
                                   Width="100"
                                   Height="140" />
                            <TextBlock Text="{Binding Name}"
                                       HorizontalAlignment="Center"
                                       FontSize="10"
                                       FontWeight="Bold" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Панель поиска + кнопки поиск и выход-->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15"
                    Grid.Row="2">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Height="30"
                     FontSize="14"
                     Margin="5"
                     VerticalContentAlignment="Center"
                     Background="#fff8e1"
                     BorderBrush="#795548"
                     BorderThickness="2"
                     Padding="5"/>
            <Button Content="Поиск"
                    Click="Search_Click"
                    Margin="5"
                    Padding="10,5"
                    Style="{StaticResource GameButtonStyle}" />
            <Button Content="Выход"
                    Click="Exit_Click" 
                    Margin="5"
                    Padding="10,5"
                    Style="{StaticResource GameButtonStyle}" />
        </StackPanel>

    </Grid>

</Window>