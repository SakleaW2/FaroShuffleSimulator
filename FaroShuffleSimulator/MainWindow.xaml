<Window x:Class="FaroShuffleSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фаро Тасовка Карт"
        WindowState="Maximized"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="Images/wood_texture.jpg"
                    Stretch="UniformToFill" />
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10">
            <Button Content="Перемешать"
                    Click="Shuffle_Click"
                    Margin="5"
                    Padding="10,5" />
            <Button Content="Сортировать"
                    Click="Sort_Click"
                    Margin="5"
                    Padding="10,5" />
            <Button Content="Сбросить"
                    Click="Reset_Click"
                    Margin="5"
                    Padding="10,5" />
            <Button Content="Показать все"
                    Click="ShowAll_Click"
                    Margin="5"
                    Padding="10,5" />
        </StackPanel>

        <ListBox x:Name="CardListBox"
                 Grid.Row="1"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionMode="Single"
                 Padding="10">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="1"
                            CornerRadius="10"
                            Background="#ecf0f1"
                            BorderBrush="#bdc3c7"
                            BorderThickness="1"
                            Padding="5">
                        <StackPanel>
                            <Image Source="{Binding ImagePath}"
                                   Width="100"
                                   Height="140" />
                            <TextBlock Text="{Binding Name}"
                                       HorizontalAlignment="Center"
                                       FontSize="10"
                                       FontWeight="Bold"
                                        />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Панель поиска -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15"
                    Grid.Row="2">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Height="30"
                     Margin="5"
                     FontSize="14" />
            <Button Content="Поиск"
                    Click="Search_Click"
                    Margin="5"
                    Padding="10,5" />
            <Button Content="Выход"
                    Click="Exit_Click"
                    Margin="5"
                    Padding="10,5" />
        </StackPanel>
    </Grid>
</Window>